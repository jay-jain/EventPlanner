<UserControl x:Class="EventPlanner.UpcomingDisplay"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:EventPlanner"
             mc:Ignorable="d" HorizontalAlignment="Left" Width="250" Background="LightYellow" Padding="0" Margin="0,5" >
    <UserControl.BorderBrush>
        <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
            <GradientStop Color="Black" Offset="0"/>
            <GradientStop Color="#FF784A4A" Offset="1"/>
        </LinearGradientBrush>
    </UserControl.BorderBrush>
    <Grid HorizontalAlignment="Left" VerticalAlignment="Top" Width="250">
        <TextBlock x:Name="eventName" HorizontalAlignment="Left" TextWrapping="Wrap" Text="Task" VerticalAlignment="Top" Padding="5"/>
        <TextBlock x:Name="dueTime" HorizontalAlignment="Right" TextWrapping="Wrap" Text="H:M" VerticalAlignment="Top" Margin="0,5,10,0"/>
    </Grid>
</UserControl>
